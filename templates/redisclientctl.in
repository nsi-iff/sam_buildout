#!/bin/bash

PID=${buildout:run-directory}/sam.pid
TAC=${tac-path}
start(){
  ${buildout:bin-directory}/twistd --pidfile=$PID -y $TAC
}

stop(){
  kill -15 `cat $PID`
}

case "$1" in
  start)
    start;;
  stop)
    stop;;
  restart)
    start
    stop;;
  *)
  echo "Usage: redisclientctl {start|stop|restart}"
  exit 1;;
esac
exit


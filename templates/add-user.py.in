#!${buildout:bin-directory}/python

from nsisam.auth import Authentication
import sys

FILE = '${sam_tac:db-file}'

def main(user, passwd):
    auth = Authentication(FILE)
    return auth.add_user(user, passwd)

if __name__ == "__main__":
    user = sys.argv[-2]
    passwd = sys.argv[-1]
    main(user, passwd)
